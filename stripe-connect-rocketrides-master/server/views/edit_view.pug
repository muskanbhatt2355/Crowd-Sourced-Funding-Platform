extends admin_layout

block header
block content
  .dashboard
    .user
      h1 Add a new month record for the existing cars!
      
      .block.stripe
        .block.stripe
        form.payout(action='/cars/car_dash', method='GET', autocomplete='off')
          input(class='primary' type='submit', value='Go back')

  h3 You can also refer to the car dashboard for the required details.
  h1.title.short-form Fill in the car details required:
  section.form.login
    form(action='/cars/add_record' method='POST', autocomplete='off')
      fieldset
        .row(label='Subs.ID')
          input(type='number', name='car_id', placeholder='50', required, autofocus)
        .row(label = 'Choose Car VIN:')
          select(id = 'vin_id', name='vin_id')
            option(value='') Select:
            each car in cars
              option(name= car.vin_id ,value = car.vin_id) #{car.vin_id}
        .row(label = 'Year')
          select(id = 'year', name='year')
            option(value='') Select:
            each year in years
              option(name= year ,value = year) #{year}
        .row(label = 'Month')
          select(id = 'month', name='month')
            option(value='') Select:
            each month in months
              option(name= month ,value = month) #{month}
        .row(label='Total Revenue')
          input(type='number', name='revenue', placeholder='1000 - (value is in $)', required, autofocus)
      input(class='primary', type='submit', value='Update')

              
